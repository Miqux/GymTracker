@model GymTracker.Models.RegisterDto
@{
    ViewData["Title"] = "Rejestracja";
    // Odczytanie komunikatów z TempData
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
    // Flaga sukcesu – domyślnie false
    bool isSuccess = TempData["IsSuccess"] != null && Convert.ToBoolean(TempData["IsSuccess"]);
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(successMessage) || !string.IsNullOrEmpty(errorMessage))
{
    <div id="message-box" class="alert @(isSuccess ? "alert-success" : "alert-danger")" role="alert">
        <span>@(isSuccess ? successMessage : errorMessage)</span>
        <button type="button" id="close-message" class="btn btn-sm btn-secondary" style="margin-left:15px;">Zamknij</button>
    </div>
}

@if (string.IsNullOrEmpty(errorMessage))
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
}

<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-top:15px;">
        <button type="submit" class="btn btn-primary">Zarejestruj się</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var closeButton = document.getElementById("close-message");
            if (closeButton) {
                closeButton.addEventListener("click", function() {
                    // Ukrycie komunikatu
                    document.getElementById("message-box").style.display = "none";
                    // Jeżeli rejestracja powiodła się, przekierowanie do strony głównej
                    var isSuccess = '@isSuccess'.toLowerCase();
                    if (isSuccess === "true") {
                        window.location.href = '@Url.Action("Index", "Home")';
                    }
                });
            }
        });
    </script>
}